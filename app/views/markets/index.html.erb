<body>
  <h3>Markets</h3>
  <div class="four-columns">
    <div class="market_sub">
      <b>Name</b>
      <% @facade.each do |market| %>
        <p><%= market.name %></p>
      <% end %>
    </div>

    <div class="market_sub">
      <b>City</b>
      <% @facade.each do |market| %>
        <p><%= market.city %></p>
      <% end %>
    </div>

    <div class="market_sub">
      <b>State</b>
      <% @facade.each do |market| %>
        <p><%= market.state %></p>
      <% end %>
    </div>

    <div class="market_sub">
      <b>More Info</b>
      <% @facade.each do |market| %>
      <div class="button-container">
        <p><%= button_to "More Info", market_path(market.id), method: :get %></p>
      <% end %>
    </div>
  </div>
</body>
